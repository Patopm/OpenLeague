generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Team {
    id            String   @id @default(cuid())
    name          String
    logoUrl       String?
    players       Player[]
    matchesAsHome Match[]  @relation("HomeMatches")
    matchesAsAway Match[]  @relation("AwayMatches")
    createdAt     DateTime @default(now())
}

model Player {
    id     String  @id @default(cuid())
    name   String
    number Int?
    teamId String?
    team   Team?   @relation(fields: [teamId], references: [id])
}

model Match {
    id           String      @id @default(cuid())
    tournament   Tournament? @relation(fields: [tournamentId], references: [id])
    tournamentId String?
    homeTeamId   String
    awayTeamId   String
    homeTeam     Team        @relation("HomeMatches", fields: [homeTeamId], references: [id])
    awayTeam     Team        @relation("AwayMatches", fields: [awayTeamId], references: [id])
    status       MatchStatus @default(PENDING)
    date         DateTime
    location     String
    homeScore    Int?        @default(0)
    awayScore    Int?        @default(0)
}

enum MatchStatus {
    PENDING
    IN_PROGRESS
    COMPLETED
    CANCELLED
}

model Tournament {
    id        String           @id @default(cuid())
    name      String
    sport     String           @default("soccer")
    matches   Match[]
    status    TournamentStatus @default(PENDING)
    createdAt DateTime         @default(now())
}

enum TournamentStatus {
    PENDING
    IN_PROGRESS
    COMPLETED
    CANCELLED
}
